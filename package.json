{
  "name": "@litehex/node-vault",
  "version": "0.2.5",
  "description": "A client for the HashiCorp's Vault API written for Node.js",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.cts",
  "files": [
    "dist/**"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "scripts": {
    "build": "tsup",
    "test": "mocha \"**/*.test.ts\" --retries 2",
    "typecheck": "tsc --noEmit",
    "lint": "pnpm typecheck && eslint .",
    "lint:fix": "eslint --fix .",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "ci:publish": "changeset publish",
    "prepublishOnly": "pnpm test && pnpm lint && pnpm format:check && pnpm build"
  },
  "packageManager": "pnpm@8.15.7",
  "dependencies": {
    "lodash.omit": "^4.5.0",
    "lodash.pick": "^4.4.0",
    "p-safe": "^1.0.0",
    "undici": "^6.19.2",
    "zod": "^3.23.8",
    "zod-request": "^0.2.2"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.5",
    "@ianvs/prettier-plugin-sort-imports": "^4.2.1",
    "@types/chai": "^4.3.16",
    "@types/lodash.omit": "^4.5.9",
    "@types/lodash.pick": "^4.4.9",
    "@types/mocha": "^10.0.7",
    "@types/node": "^20.14.8",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "chai": "^5.1.1",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "mocha": "^10.4.0",
    "prettier": "^3.3.2",
    "tsd": "^0.31.1",
    "tsup": "^8.1.0",
    "tsx": "^4.15.7",
    "typescript": "^5.5.2"
  },
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "private": false,
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/shahradelahi/node-vault.git"
  },
  "keywords": [
    "hashicorp",
    "vault",
    "client",
    "secrets",
    "node"
  ],
  "author": "Shahrad Elahi <shahrad@litehex.com> (https://github.com/shahradelahi)",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/shahradelahi/node-vault/issues"
  },
  "homepage": "https://github.com/shahradelahi/node-vault#readme"
}
