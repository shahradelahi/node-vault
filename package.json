{
  "name": "@litehex/node-vault",
  "version": "0.2.1",
  "description": "A client for the HashiCorp's Vault API written for Node.js",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.cts",
  "files": [
    "dist/**"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "scripts": {
    "build": "tsup",
    "test": "mocha \"**/*.test.ts\" --retries 2",
    "type-check": "tsc --noEmit",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint --fix \"src/**/*.ts\"",
    "format:check": "prettier --check \"**/*.{js,ts,md}\"",
    "format": "prettier --write .",
    "prepublishOnly": "pnpm test && pnpm run format:check && pnpm run type-check && pnpm build"
  },
  "packageManager": "pnpm@8.15.0",
  "dependencies": {
    "lodash.omit": "^4.5.0",
    "lodash.pick": "^4.4.0",
    "undici": "^6.11.1",
    "zod": "^3.22.4",
    "zod-request": "^0.2.2"
  },
  "devDependencies": {
    "@types/chai": "^4.3.14",
    "@types/lodash.omit": "^4.5.9",
    "@types/lodash.pick": "^4.4.9",
    "@types/mocha": "^10.0.6",
    "@types/mustache": "^4.2.5",
    "@types/node": "^20.12.4",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "chai": "^5.1.0",
    "chalk": "^5.3.0",
    "dotenv": "^16.4.5",
    "eslint": "^9.0.0",
    "mocha": "^10.4.0",
    "prettier": "^3.2.5",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.0.2",
    "tsx": "^4.7.2",
    "type-fest": "^4.15.0",
    "typescript": "^5.4.4"
  },
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/shahradelahi/node-vault.git"
  },
  "keywords": [
    "hashicorp",
    "vault",
    "client",
    "secrets",
    "node"
  ],
  "author": "Shahrad Elahi <shahrad@litehex.com> (https://github.com/shahradelahi)",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/shahradelahi/node-vault/issues"
  },
  "homepage": "https://github.com/shahradelahi/node-vault#readme"
}
